<mvc:View
    controllerName="odata.project1908.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ux="sap.uxap"
    xmlns:fb="sap.ui.comp.filterbar">
    <core:Fragment
        fragmentName="odata.project1908.view.fragment.Customer"
        type="XML"/>
    <ux:ObjectPageLayout
        id="ObjectPageLayout"
        useIconTabBar="true"
        upperCaseAnchorBar="false">

        <ux:headerTitle>
            <ux:ObjectPageHeader objectTitle="Section sample"></ux:ObjectPageHeader>
        </ux:headerTitle>

        <ux:headerContent>
            <!-- <ObjectAttribute title="" text="This example explains the rules for the
            rendering of sections"/> -->
            <!-- <Input
                id="inputId"
                width="200px"
                placeholder="Customer ID"
                showValueHelp="true"
                value="{main>/CustomerID}"
                valueHelpRequest="onValueHelp"/>
            <Button width="100px" type="Emphasized" text="search" press="onSearch"/> -->
            <fb:FilterBar
                id="filterbar"
                filterContainerWidth="24rem"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="CustomerID"
                        label="CustomerID"
                        groupName="Group1"
                        visibleInFilterBar="true">
                        <fb:control>
                            <Input
                                id="inputId"
                                width="200px"
                                placeholder="Customer ID"
                                showValueHelp="true"
                                value="{main>/CustomerID}"
                                valueHelpRequest="onValueHelp"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Category"
                        label="Category"
                        groupName="Group1"
                        visibleInFilterBar="true">
                        <fb:control>
                            <MultiComboBox
                                name="Category"
                                selectionChange=".onSelectionChange"
                                items="{
												path: '/ProductCategories',
												templateShareable: true
											}">
                                <core:Item key="{key}" text="{name}"/>
                            </MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="SupplierName"
                        label="SupplierName"
                        groupName="Group1"
                        visibleInFilterBar="true">
                        <fb:control>
                            <MultiComboBox
                                name="SupplierName"
                                selectionChange=".onSelectionChange"
                                items="{
												path: '/ProductSuppliers',
												templateShareable: true
											}">
                                <core:Item key="{key}" text="{name}"/>
                            </MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>

        </ux:headerContent>

        <ux:sections>
            <ux:ObjectPageSection titleUppercase="false" title="Section 4">
                <ux:subSections>
                    <ux:ObjectPageSubSection titleUppercase="false">
                        <ux:blocks>
                            <Table
                                id="idProductsTable"
                                inset="false"
                                items="{
			                        path: '/Orders',
                                    sorter: {
				                        path: 'OrderID'
			                            }
		                            }">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="Products" level="H2"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="OrderID"/>
                                    </Column>
                                    <Column>
                                        <Text text="CustomerID"/>
                                    </Column>
                                    <Column>
                                        <Text text="EmployeeID"/>
                                    </Column>
                                    <Column>
                                        <Text text="OrderDate"/>
                                    </Column>
                                    <Column>
                                        <Text text="RequiredDate"/>
                                    </Column>
                                    <Column>
                                        <Text text="ShippedDate"/>
                                    </Column>
                                    <Column>
                                        <Text text="Freight Sum"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <Text text="{OrderID}"/>
                                            <Text text="{CustomerID}"/>
                                            <Text text="{EmployeeID}"/>
                                            <Text
                                                text="{
                                                    path: 'OrderDate',
                                                    formatter: '.formatter.fnDateToString'}"/>
                                            <Text
                                                text="{
                                                    path: 'RequiredDate',
                                                    formatter: '.formatter.fnDateToString'}"/>
                                            <Text
                                                text="{
                                                    path: 'ShippedDate',
                                                    formatter: '.formatter.fnDateToString'}"/>
                                            <Text
                                                text="{
                                                parts : [
                                                    { path: 'ShipVia'},
                                                    { path: 'Freight'}
                                                ],
                                                formatter: '.formatter.fnFreightSum'}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ux:blocks>
                    </ux:ObjectPageSubSection>
                </ux:subSections>
            </ux:ObjectPageSection>

            <ux:ObjectPageSection titleUppercase="false" title="Section 5">
                <ux:subSections>
                    <ux:ObjectPageSubSection titleUppercase="false">
                        <ux:blocks>
                            <Table id="idCustomersTable" inset="false" items="{path: '/Customers'}">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="Customers" level="H2"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="CustomerID"/>
                                    </Column>
                                    <Column>
                                        <Text text="CompanyName"/>
                                    </Column>
                                    <Column>
                                        <Text text="Country"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <Text text="{CustomerID}"/>
                                            <Text text="{CompanyName}"/>
                                            <Text text="{Country}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ux:blocks>
                    </ux:ObjectPageSubSection>
                </ux:subSections>
            </ux:ObjectPageSection>
        </ux:sections>
    </ux:ObjectPageLayout>
</mvc:View>